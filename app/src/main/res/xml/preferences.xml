<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="@string/preference_header_general_title">

        <EditTextPreference
            android:key="email"
            android:title="@string/preference_email_title"
            android:summary="%s"
            android:defaultValue="some.one@example.com"
            android:dialogTitle="@string/preference_email_title"
            android:maxLines="1"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:capitalize="words"
            android:inputType="textEmailAddress" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/preference_header_data_title">

        <ListPreference
            android:key="data"
            android:title="@string/preference_data_streaming_title"
            android:summary="%s"
            android:defaultValue="@string/preference_data_streaming_wifi_only_value"
            android:entries="@array/preference_data_streaming_list"
            android:entryValues="@array/preference_data_streaming_values"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:dialogTitle="@string/preference_data_streaming_title" />

    </PreferenceCategory>
</PreferenceScreen>